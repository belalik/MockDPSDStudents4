<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">





    <PreferenceCategory app:title="List Settings"

        >

        <SwitchPreferenceCompat
            app:key="show only shortlist"
            app:title="Show only shortlist" />

        <SwitchPreferenceCompat
            app:key="show only dissertation pending"
            app:title="Only Dissertation pending" />


    </PreferenceCategory>



    <PreferenceCategory app:title="List Ordering">


        <ListPreference
            app:title="Sort List"
            app:defaultValue="by_id"
            app:entries="@array/order_entries"
            app:entryValues="@array/order_values"
            app:key="order"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>

</PreferenceScreen>